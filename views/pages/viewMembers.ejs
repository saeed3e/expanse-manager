<!DOCTYPE html>
<html ng-app="myApp">

<head>
    <% include ../partials/header.ejs %>
    
</head>

<body>
    <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
        <header class="mdl-layout__header">
            <div class="mdl-layout__header-row">
                <!-- Title -->
                <span class="mdl-layout-title">Expence Manager</span>
                <!-- Add spacer, to align navigation to the right -->
                <div class="mdl-layout-spacer"></div>
                <nav class="mdl-navigation">
                    <!-- Right aligned menu below button -->
                    <button id="demo-menu-lower-right" class="mdl-button mdl-js-button mdl-button--icon">
                        <i class="material-icons">more_vert</i>
                    </button>
                    <ul class="mdl-menu mdl-menu--bottom-right mdl-js-menu mdl-js-ripple-effect" for="demo-menu-lower-right">
                        <li class="mdl-menu__item"><a href="addMembers.html">Add members</a></li>
                        <li class="mdl-menu__item"><a href="viewMembers.html">View members detail</a></li>
                        <li disabled class="mdl-menu__item">Delete members</li>
                        <li class="mdl-menu__item">Update members profile</li>
                    </ul>
                </nav>
            </div>
        </header>

        <div class="mdl-layout__drawer" ng-class="{'is-visible':isEnabled}">
            <span class="mdl-layout-title">Title</span>
            <nav class="mdl-navigation">
                <a class="mdl-navigation__link" href="">Add Expence</a>
                <a class="mdl-navigation__link" href="">View Expence</a>
                <a class="mdl-navigation__link" href="">Manage Users</a>
                <a class="mdl-navigation__link" href="">Transfer Amount</a>
                <a class="mdl-navigation__link" href="">Invest Details</a>
            </nav>
        </div>
        <main class="mdl-layout__content">
            <div class="page-content">
                <div ng-controller="myCtrl">
                    <div class="mdl-progress mdl-js-progress mdl-progress__indeterminate progress-demo" ng-hide="!showLoader"></div>
                    <ol class="breadcrumb">
                        <li><a href="#">Home</a></li>
                        <li><a href="#">Manage User</a></li>
                        <li class="active">View Users</li>
                    </ol>
                    <div class="container mb40">
                        <table class="table">
                            <tbody>
                                <!-- On rows -->
                                <tr class="info">
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Mobile</th>
                                    <th class="cross">Delete</th>
                                    <th class="update">Update</th>
                                </tr>
                                <tr ng-repeat="user in members">
                                    <td>{{user.name}}</td>
                                    <td>{{user.email}}</td>
                                    <td>{{user.mobile}}</td>
                                    <td class="cross" ng-click="deleteMember(user._id)">x</td>
                                    <td class="update" ng-click="deleteMember(user._id)">I</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </main>
    </div>
        <% include ../partials/footer.ejs %>
    
</body>

</html>
