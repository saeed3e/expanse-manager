<!DOCTYPE html>
<html ng-app="myApp">

<head>
    <link rel="stylesheet" href="c/font.css">
    <link rel="stylesheet" href="c/bootstrap.css">
    <link rel="stylesheet" href="c/style.css">
    <meta name="viewport" content="initial-scale=1" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no" />
</head>

<body>
    <div ng-controller="overallStatus">
        <!-- Static navbar -->
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">Expance Manager</a>
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="#">Home</a></li>
                        <li><a href="#">Manage users</a></li>
                        <li><a href="#">Transfer Amount</a></li>
                        <li><a href="#">Invest Details</a></li>
                    </ul>
                </div>
                <!--/.nav-collapse -->
            </div>
            <!--/.container-fluid -->
        </nav>
        <div class="container mb40">
            <h3 class="text-center"></h3>
            <div class="panel panel-default">
                <!-- Default panel contents -->
                <div class="panel-heading">Account Balance</div>
                <!-- Table -->
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>User Name</th>
                                <th>Deposite</th>
                                <th>Invest</th>
                                <th>Remaining Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="userInfo in remainingAmount">
                                <td>{{userInfo.name}}</td>
                                <td>{{userInfo.deposite}}</td>
                                <td>{{userInfo.invest}}</td>
                                <td>{{userInfo.remaining}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">Total Investment View of all users</div>
                <p><label for="">Total deposite Amount</label><span>09080980</span></p>
                <p><label for="">Total deposite Amount</label><span>09080980</span></p>
                <p><label for="">Total deposite Amount</label><span>09080980</span></p>
            </div>
        </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="libraries/bootstrap.min.js"></script>
    <script src="libraries/angular.min.js"></script>
    <script src="controllers/overallStatus.js"></script>
</body>

</html>
